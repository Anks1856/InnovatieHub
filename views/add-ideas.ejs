<%- include('pages/header'); -%>
<link rel="stylesheet" href="../css/add-idea.css">	
<%- include('pages/nav'); -%>

<!-- Top Content -->
		<section id="top-content">

			<div class="content-box-lg">

				<div class="container">

					<div class="row">

						<div class="col-md-12 col-sm-12 wow fadeIn">

							<div id="top-heading" class="text-center">

								<h3>Add Ideas</h3>
								
							</div>

						</div>

					</div>

				</div>

			</div>

		</section>
	<!-- Top Content Ends -->
	

	<section id="add-notes">

		
		<div class="content-box-lg">

			<div class="container">
                
                <form class="myForm text-left" method="POST"  action="/idea/upload/" enctype="multipart/form-data">
				
                <!-- form 1 -->
                <div class="row">
                    
					<div class="col-md-12 col-sm-12">
						<div class="text-left">
							<h2 class="heading">Basic idea Details</h2>
						</div>
					</div>
					
					<div class="col-md-6 col-sm-12">
						
						<div class="user-profile-left">

								<div class="form-group">
									<label class="form-label">Title *</label>
									<input class="myInput" placeholder="Enter your note title" type="text" id="title" name="title" required>
								</div>
								
								<div class="form-group ">
									<label class="form-label">Display Picture</label>

									<div class="image-upload">
										<label class="myInput text-center" for="display_picture">
											<img src="../images/Front_images/upload-file.png" class="img-responsive img-fluid" />
											<p>Upload a Picture</p>
										</label>
										<input id="display_picture" name="displayPic" type="file" accept="image/*" />
										<div id="display_picture_filename"></div>
									</div>
								</div>
								
						</div>
						
					</div>
					
					<!-- Right Side -->
					<div class="col-md-6 col-sm-12">
						
						<div class="user-profile-right">

							<div class="form-group">
								<label class="form-label">Category *</label>
								<select class="myInput" id="category" name="category" required>
									<option selected disabled>Select your category</option>
									<option>GTU</option>
									<option>VNSGU</option>
									<option>GU</option>
									<option>Parul</option>
									
								</select>
							</div>
								
								<div class="form-group">
									<label class="form-label">Upload Videos </label>

									<div class="image-upload">
										<label class="myInput text-center" for="video">
											<img src="../images/Front_images/upload-file.png" class="img-responsive img-fluid" />
											<p>Upload your video </p>
										</label>
										<input id="video" name="video" type="file"  accept=".mp4" />
										<div id="video_filename"></div>
									</div>

								</div>

																
							
						</div>
						
					</div>
					
					<div class="col-md-12 col-sm-12">
							<div class="form-group">
								<label class="form-label">Description *</label>
								<textarea class="myInput" id="description" name="description" placeholder="Enter your description"></textarea>
							</div>
					</div>
					
				</div>

		
		        <!-- form 2 -->
		        
				<div class="row">

					<div class="col-md-12 col-sm-12">
						<div class="text-left">
							<h2 class="heading" style="margin-top: 60px">Selling Information</h2>
						</div>
					</div>
					
					<div class="col-md-6 col-sm-12">
						
						<div class="user-profile-left">

								
							<div class="form-group">
								<label class="form-label">Is your idea sellable?</label>
								<select class="myInput" id="sellable" name="sellable" required>
									<option selected disabled>Select your type</option>
									<option value="yes">YES</option>
									<option value="no">NO</option>
								</select>
							</div>

							
								
								
						</div>
						
					</div>

					<div class="col-md-6 col-sm-12"></div>
				</div>


					
				<div class="row" >
					
					<!-- left Side -->
					<div class="col-md-6 col-sm-12">
						
						<div style="display: none;" class="user-profile-left" id="form1">

							<div class="form-group">
								<label class="form-label">Sell Price*</label>
								<input class="myInput" placeholder="Enter your price" type="text" id="price" name="sellPrice" >
							</div>

							<div class="form-group">
								<label class="form-label">Bank Name*</label>
								<select class="myInput" id="bank_name" name="BankName" required>
									<option selected disabled>Select your bnak</option>
									<option>ICICI</option>
									<option>Axis</option>
									<option>SBI</option>
									<option>BOB</option>
									
								</select>
							</div>
								
								
								
						</div>
						
					</div>

					<!-- right Side -->
					<div class="col-md-6 col-sm-12">
						
						<div style="display: none;" class="user-profile-right" id="form2">

							<div class="form-group">
								<label class="form-label">Account Number*</label>
								<input class="myInput" placeholder="Enter your account number" type="text" id="account_no" name="AccountNumber" >
							</div>

							<div class="form-group">
								<label class="form-label">IFSC code*</label>
								<input class="myInput" placeholder="Enter your IFSC Code" type="text" id="ifsc_code" name="IFSCcode" >
							</div>
								
								
								
						</div>
						
					</div>

					
					
					
					
					
				</div>

				<!-- Button -->
				<div class="row">
					<!--  Buttons  -->
					<div class="col-md-12 col-sm-12">
						<div class="buttons">
								<div class="last">
									<input type="submit" class="btn" name="save" id="save" value="SAVE">
									
								</div>
						</div>
				</div>
				</div>
            
            </form>
			</div>

		</div>
		

	</section>

	<!--  Ends -->
	
	<!-- Footer -->
	<footer>

		<div class="content-box-lg">
			<div class="container">
				<div class="row copyright">

						<div class="col-md-6">
						<p class="pera">
							Copyright &copy; 2021 Innovative Hub All Rights Reserved.
						</p>
					</div>

					<div class="col-md-6 justify-content-end">
						<ul class="social-list ">
							<li><a href="#"><i class="fa fa-facebook"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter"></i></a></li>
							<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
						</ul>
					</div>

				</div>
			</div>
		</div>

	</footer>
	<!-- Footer Ends -->

	<!-- User Profile Ends -->

	<!-- Add jquery-->
	<script src="../js/jquery.min.js"></script>
	
	<!-- jquery UI-->
	<script src="../js/jquery-ui/jquery-ui.js"></script>

	<!-- Bundle/Proper js -->
	<script src="../js/bootstrap/bootstrap.bundle.min.js"></script>
	
	<!-- Bootstrap js -->
	<script src="../js/bootstrap/bootstrap.min.js"></script>
		
	<!-- DataTable JS -->
    <script src="../js/DataTables/datatables.js"></script>

	<!-- Custom JS -->
	<script src="../js/script.js"></script>
	
	<script>
		/* display picture */
        $("#display_picture").change(function(){
          $("#display_picture_filename").text(this.files[0].name);
            $("#display_picture_filename").css("margin", "-25px 0 4px 0");
        });
        
        /* video */
        $("#video").change(function(){
          $("#video_filename").text(this.files[0].name);
            $("#video_filename").css("margin", "-25px 0 4px 0");
        });
		document.getElementById("sellable").onchange = function () {
			var result = document.getElementById("sellable").value;
			console.log(result);

			if(result == 'yes'){
				$('#form1').css("display", "block");
				$('#form2').css("display", "block");
			}
			else{
				$('#form1').hide();
				$('#form2').hide();
			}

		}
	</script>


</body>


</html>