<%- include('pages/header'); -%>
<!-- <link rel="stylesheet" href="../css/Sty.css">	 -->
<%- include('pages/nav'); -%>

<!-- main contact -->


    <section id="mainContact" class="container">

      <!-- Caraousel -->

      <div id="carouselExampleIndicators" class="carousel slide my-5 " data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block  cara_img" src="../images/innovative_image/Sugar-Skull-Succulents-759x450.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block cara_img" src="../images/innovative_image/3D-Sphere-Bookshelf-1-759x500.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block cara_img" src="../images/innovative_image/Death-star-clock-759x500.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="sr-only">Previous</span>
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

       <!-- Caraousel End-->

        <div class="row">
            <!-- <div class="container"> -->
            <div class="col-lg-9">


              <% ideas.forEach(function(idea) { %>

                  <div class="card mb-5">
                  <img src="/uploads/<%= idea.img %>" />
                  
                   
                    <!-- <img src="" class="card-img-top post-img" alt="..."> -->
                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title"><%=  idea.title %>
                            <div id="post_btn">
                                <input id="like" type="radio" name="like" value="" />
                                <label for="like" title="Like">
                                    <i class="td fa fa-heart" aria-hidden="true"></i>
                                </label>
                                
                                <input id="comment" type="radio" name="comment" value="" />
                                <label for="commment" title="Commment">
                                    <i class="td fa fa-comments-o" aria-hidden="true"></i>
                                </label>
                                
                                <input id="share" type="radio" name="share" value="" />
                                <label for="share" title="Share">
                                    <i class="td fa fa-share-alt" aria-hidden="true"></i>
                                </label>
                                
                                <input id="catr" type="radio" name="cart" value="" />
                                <label for="cart" title="Add to Cart">
                                    <i class="td fa fa-cart-plus" aria-hidden="true"></i>
                                </label>
                                
                            </div>
                            </h5>
                    </div>
                    <p class="card-text"><%=  idea.description.slice(0 ,100) %><span><a class="td" href="/idea/show/<%= idea.id %>/details">  read more.....</a></span></p>
                    <p class="card-text"><small class="text-muted">Published on <%=  idea.publishedDate.toDateString() %></small></p>
                    </div>
                </div>
                  
                
              <% });  %>

              <!-- demo -->

              
                  

            </div>


            <!-- Letest Posts -->

            <div class="col-lg-3">

                <h1 class="text-center">latest Posts</h1>

                <hr>
                <% threeIdeas.forEach(function(idea) { %>
                <!-- Post 1 -->
                
                <div class="card mb-3" style="width: 18rem;">
                  <img src="/uploads/<%= idea.img %>" class="card-img-top" />
                    <!-- <img src="../images/usb-rechargeable-batteries1.jpg" class="card-img-top" alt="..."> -->
                    <div class="card-body">
                      <p class="card-text"><%=  idea.description.slice(0,50) %><span><a class="td" href="/idea/show/<%= idea.id %>/details">  read more.....</a></span></p>
                    </div>
                  </div>
               
                <% });  %>
                 

                 
                

            </div>
        <!-- </div> -->
        </div>

    </section>

    <!-- Footer -->
	<footer>

		<div class="content-box-lg">
			<div class="container">
				<div class="row copyright">

						<div class="col-md-6">
						<p class="pera">
							Copyright &copy; 2021 Innovative Hub All Rights Reserved.
						</p>
					</div>

					<div class="col-md-6 justify-content-end">
						<ul class="social-list ">
							<li><a href="#"><i class="fa fa-facebook"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter"></i></a></li>
							<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
						</ul>
					</div>

				</div>
			</div>
		</div>

	</footer>
	<!-- Footer Ends -->



